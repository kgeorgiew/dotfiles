# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
	color_good = "#60ac39"	
	color_bad = "#d73737"
	color_degraded = "#b65611"
#	separator = " "
        interval = 2 
#	output_format = "lemonbar"
	output_format = "none"	
}

#order += "ipv6"
order += "disk /"
#order += "run_watch DHCP"
order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "load"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = " %essid %ip"
        format_down = " down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip"
        format_down = "%{F#d73737}%{F-} down"
}

battery 0 {
        format = "%status %percentage %remaining %consumption"
#	min_width = 400
	align = "left"
	format_down = ""
	status_chr = ""
	status_bat = ""
	status_full = ""
	hide_seconds = true
	integer_battery_capacity = true
	last_full_capacity = true
	low_threshold = 5
	threshold_type = "percentage"
	path = "/sys/class/power_supply/CMB1/uevent"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/openvpn.pid"
	format = "vpn on"
	format_down = "vpn off"
}

tztime local {
        format = " %d.%m.%Y %H:%M:%S"
}

load {
        format = " %1min %5min"
}

disk "/" {
        format = "S/ %avail"
}

volume master {
	format = " %volume"
	format_muted = " %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
